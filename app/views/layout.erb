<!doctype html>
<html>
    <head>
        <title>Finstagram</title>
        <link rel="stylesheet" href="/stylesheets/normalize.css" type="text/css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300" type="text/css" />
        <link rel="stylesheet" href="/stylesheets/lib.css" type="text/css" />
        <link rel="stylesheet" href="/stylesheets/app.1.css" type="text/css" />
    </head>
    <body>
        <header>
            <h1><a href="/">Finstagram</a></h1>
            <% if current_user %>
                <a href="/user/<%= current_user.username %>" class="userhead">
                    <%= current_user.username %>
                </a>
                <a href="/user/<%= current_user.username %>">
                    <img src="<%= current_user.avatar_url %>" class="avatar"/>
                </a>
            <% end %>
            <div class="login-info">
                <% if current_user %>
                    <a href="/logout">Logout</a>
                <% else %>
                    <a href="/login">login</a>
                    <a href="/signup">Signup</a>
                <% end %>
            </div>
        </header>
        <%= yield %>
    </body>
</html>